@model List<L02P02_2022AE650_2023CA651.Models.comentarios_libros>

<h1>Comentarios del Libro: @ViewData["LibroNombre"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Comentario</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comentario in Model)
        {
            <tr>
                <td>@comentario.comentarios</td>
                <td>@comentario.created_at.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

<h3>Agregar Comentario</h3>
<form method="post" action="@Url.Action("AgregarComentario", "Comentarios")">
    <input type="hidden" name="id_libro" value="@ViewData["id_libro"]" />
    <div class="form-group">
        <label for="comentario">Comentario</label>
        <textarea name="comentarios" class="form-control" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Comentario</button>
</form>
