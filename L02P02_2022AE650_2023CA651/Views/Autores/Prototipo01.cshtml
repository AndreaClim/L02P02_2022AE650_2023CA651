@{
}
@model List<L02P02_2022AE650_2023CA651.Models.autores>

<h1>Listado de Autores</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre del Autor</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var autor in Model)
        {
            <tr>
                <td>@autor.id</td>
                <td>@autor.autor</td>

                <td>
                    
                    <a href="@Url.Action("Prototipo02", "Libros", new { id = autor.id })" class="btn btn-primary">
                        Seleccionar
                    </a>
                </td>
            </tr>
        }

       
    </tbody>
</table>

